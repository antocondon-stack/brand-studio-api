{
  "name": "brand-studio-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs=require('fs');const path=require('path');const src='assets';const dst='dist/assets';if(fs.existsSync(src)){const copy=(s,d)=>{if(!fs.existsSync(d))fs.mkdirSync(d,{recursive:true});fs.readdirSync(s).forEach(f=>{const sp=path.join(s,f);const dp=path.join(d,f);if(fs.statSync(sp).isDirectory())copy(sp,dp);else fs.copyFileSync(sp,dp);});};copy(src,dst);}\"",
    "start": "node dist/server.js",
    "postinstall": "npm run build",
    "test:generate": "ts-node-dev --transpile-only test-generate.ts",
    "test:font-to-path": "ts-node-dev --transpile-only scripts/test-font-to-path.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@openai/agents": "^0.4.7",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "opentype.js": "^1.3.4",
    "pdfkit": "^0.17.2",
    "sharp": "^0.34.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/opentype.js": "^1.3.9",
    "@types/pdfkit": "^0.17.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
